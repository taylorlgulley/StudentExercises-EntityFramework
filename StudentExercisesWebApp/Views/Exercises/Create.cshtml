@model StudentExercisesWebApp.Models.ViewModels.CreateExerciseViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Exercise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exercise.Name" class="control-label"></label>
                <input asp-for="Exercise.Name" class="form-control" />
                <span asp-validation-for="Exercise.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise.Language" class="control-label"></label>
                <input asp-for="Exercise.Language" class="form-control" />
                <span asp-validation-for="Exercise.Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedStudents" class="control-label"></label>
                <select multiple asp-for="SelectedStudents" class="form-control" asp-items="@Model.AvailableStudents"></select>
                <span asp-validation-for="SelectedStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
